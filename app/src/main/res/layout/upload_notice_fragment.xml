<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:id="@+id/container_notice"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="8dp"
        android:gravity="center"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Upload Notice"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Select Class :"/>

            <Spinner
                android:id="@+id/classspinnernotice"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:padding="8dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/t_upnotice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="10dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:justificationMode="inter_word"
            android:hint="Notice Title"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"/>
    <EditText
        android:id="@+id/des_upnotice"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="start"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:fadeScrollbars="false"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:justificationMode="inter_word"
        android:hint="Notice Description"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"/>
    <Button
        android:id="@+id/date_upnotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="10dp"
        style="?android:spinnerStyle"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Notice Date"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:onClick="opendialogue"/>

        <ImageView
            android:id="@+id/upload_notice"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/upload"
            android:background="@color/white"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deltaRelative_notice"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_upnotice"
                android:layout_width="280dp"
                android:layout_height="300dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="46dp"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/imgcl_upnotice"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="265dp"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_close_24" />

        </RelativeLayout>

<!--        <ImageView-->
<!--            android:id="@+id/imgrotate_upnotice"-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:layout_gravity="center"-->
<!--            android:background="@color/white"-->
<!--            android:src="@drawable/ic_baseline_rotate_right_24" />-->

    <Button
        android:id="@+id/bt_upnotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pearl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Upload Notice"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginBottom="80dp"/>
    </LinearLayout>
</ScrollView>